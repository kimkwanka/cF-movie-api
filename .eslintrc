{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "brace-style": ["error", "1tbs"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts" : true }],
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
}
